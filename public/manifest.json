{
  "name": "LinkedIn Automation Window",
  "description": "LinkedIn Automation Window",
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "Growexx",
  "icons": {
    "192": "icons/logo192.png",
    "512": "icons/logo512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation",
    "windows",
    "declarativeNetRequest",
    "webRequest",
    "history"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_start"
    }
  ]
}